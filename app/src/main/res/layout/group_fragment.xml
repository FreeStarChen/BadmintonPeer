        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/view_pager_group"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tabs_group" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabs_group"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_group_tab"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tabIndicatorColor="@color/greyish_brown"
            app:tabSelectedTextColor="@color/greyish_brown"
            app:tabTextColor="@color/gray_888888">

        </com.google.android.material.tabs.TabLayout>


        <ImageView
            android:id="@+id/image_add_group"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/ic_add_group"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
