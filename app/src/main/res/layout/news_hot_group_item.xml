<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="group"
            type="com.mark.badmintonpeer.data.Group" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/white"
        android:elevation="8dp"
        app:cardCornerRadius="10dp">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/light_green"
            android:elevation="8dp">

            <TextView
                android:id="@+id/text_sign_up_people_number_news"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/noto_sans"
                android:text="@{String.valueOf(group.totalPeopleNumber-group.needPeopleNumber)}"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/text_start_time_news"
                app:layout_constraintTop_toBottomOf="@+id/text_start_time_news"
                tools:text="8" />

            <TextView
                android:id="@+id/text_slash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:fontFamily="@font/noto_sans"
                android:text="/"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/text_sign_up_people_number_news"
                app:layout_constraintTop_toTopOf="@+id/text_sign_up_people_number_news"
                tools:text="/" />

            <TextView
                android:id="@+id/text_total_people_number_news"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/noto_sans"
                android:text="@{String.valueOf(group.totalPeopleNumber)}"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/text_slash"
                app:layout_constraintTop_toTopOf="@+id/text_slash"
                tools:text="16" />

            <ImageView
                android:id="@+id/image_group_photo_news"
                android:layout_width="110dp"
                android:layout_height="100dp"
                android:background="@color/gray_cccccc"
                android:scaleType="centerInside"
                app:imageUrlTransform="@{group.images[0]}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@drawable/ic_error" />

            <TextView
                android:id="@+id/text_group_title_news"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:ellipsize="end"
                android:fontFamily="@font/noto_sans"
                android:maxLines="1"
                android:text="@{group.name}"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/image_group_photo_news"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/image_group_photo_news"
                app:layout_constraintTop_toBottomOf="@+id/text_city_news"
                tools:text="快樂羽球團" />

            <TextView
                android:id="@+id/text_date_news"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/noto_sans"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/text_group_title_news"
                app:layout_constraintStart_toStartOf="@+id/text_group_title_news"
                app:layout_constraintTop_toBottomOf="@+id/text_group_title_news"
                tools:text="2022/06/30 (四)" />

            <TextView
                android:id="@+id/text_price_news"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:fontFamily="@font/noto_sans"
                android:textColor="#E91E63"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/text_total_people_number_news"
                app:layout_constraintEnd_toEndOf="@+id/text_date_news"
                tools:text="$200" />

            <TextView
                android:id="@+id/text_start_time_news"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/noto_sans"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/text_date_news"
                app:layout_constraintTop_toBottomOf="@+id/text_date_news"
                tools:text="18:00" />

            <TextView
                android:id="@+id/text_city_news"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#42000000"
                android:fontFamily="@font/noto_sans"
                android:paddingStart="2dp"
                android:paddingEnd="2dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/image_group_photo_news"
                tools:text="台北市" />

            <TextView
                android:id="@+id/text_classification_news"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:elevation="8dp"
                android:fontFamily="@font/noto_sans"
                android:paddingStart="2dp"
                android:paddingEnd="2dp"
                android:rotation="-45"
                android:text="@{group.classification}"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="零打" />

            <TextView
                android:id="@+id/text_wave_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/noto_sans"
                android:text="~"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/text_start_time_news"
                app:layout_constraintTop_toBottomOf="@+id/text_date_news" />

            <TextView
                android:id="@+id/text_end_time_news"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/noto_sans"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/text_wave_line"
                app:layout_constraintTop_toBottomOf="@+id/text_date_news"
                tools:text="20:00" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="-4dp"
                android:layout_marginTop="-30dp"
                android:background="@drawable/bg_slanted_rectangle"
                android:fontFamily="@font/noto_sans"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>